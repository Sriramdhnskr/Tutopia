<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title"
            layout="@layout/title_card_layout" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/subscriptionsBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_yellow_gradient_bg"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:visibility="gone"
                    android:text="Subscriptions"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/editBtn" />

                <TextView
                    android:id="@+id/addresslblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Address"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/schoolValueTxt" />

                <TextView
                    android:id="@+id/addressValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="address"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/addresslblTxt" />

                <TextView
                    android:id="@+id/schoollblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="School"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/classValueTxt" />

                <TextView
                    android:id="@+id/schoolValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="school"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/schoollblTxt" />

                <TextView
                    android:id="@+id/classlblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Class"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/pincodeValueTxt" />

                <TextView
                    android:id="@+id/classValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="class"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/classlblTxt" />

                <TextView
                    android:id="@+id/pincodelblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Pincode"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/cityValueTxt" />

                <TextView
                    android:id="@+id/pincodeValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="pincode"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/pincodelblTxt" />

                <TextView
                    android:id="@+id/citylblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="City"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/whatsappnoValueTxt" />

                <TextView
                    android:id="@+id/cityValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="City"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/citylblTxt" />

                <TextView
                    android:id="@+id/whatsappnolblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="WhatsApp Number"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/mobilenoValueTxt" />

                <TextView
                    android:id="@+id/whatsappnoValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="whatsapp number"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/whatsappnolblTxt" />

                <TextView
                    android:id="@+id/mobilenolblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Mobile No"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/nameValueTxt" />

                <TextView
                    android:id="@+id/mobilenoValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Mobile no"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@id/mobilenolblTxt" />

                <ImageView
                    android:id="@+id/profileImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/user_placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/namelblTxt"
                    style="@style/ProductSansRegular18Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Name"
                    android:textColor="@color/grey_text"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@+id/profileImg" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineverticalLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="24dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineVerticalRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="24dp" />

                <TextView
                    android:id="@+id/nameValueTxt"
                    style="@style/ProductSansBold18Black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="Name"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@+id/namelblTxt" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_blue_gradient_bg"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toStartOf="@+id/guidelineVerticalRight"
                    app:layout_constraintStart_toStartOf="@+id/guidelineverticalLeft"
                    app:layout_constraintTop_toBottomOf="@+id/addressValueTxt" />

                <TextView
                    android:id="@+id/changePasswordTxt"
                    style="@style/ProductSansBold16Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subscriptionsBtn" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>