<?xml version="1.0" encoding="utf-8"?>
    <resources>
    <style name="dropDownStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:dropDownListViewStyle">@style/DropDownMenuBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/divider_color</item>
        <item name="android:textColorHint">@color/divider_color</item>
        <item name="android:cacheColorHint">@color/white</item>
        <item name="android:listSelector">@color/divider_color</item>
    </style>

    <style name="MyEditTextTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorPrimary">@color/primary_light</item>
        <item name="android:backgroundTint">@color/black</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="DropDownMenuBackground">
        <item name="android:background">@color/white</item>
    </style>


    <style name="BtnParentNoRadius">
        <item name="cornerRadius">0dp</item>
    </style>

    <!-- ********************************* Regular styles**********************-->

    <style name="ProductSansRegular16Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ProductSansBold16Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="ProductSansRegular16Grey">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ProductSansRegular18Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ProductSansBold18Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="ProductSansRegular20Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ProductSansRegular18Grey">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="ProductSansBold35Black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>


    <style name="BtnFont">
        <item name="fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="fontFamily">@font/product_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/spinner_dialog_bg
        </item>
        <item name="android:popupBackground">@drawable/spinner_dialog_bg
        </item>

        <item name="android:textAlignment">textStart</item>
    </style>

    </resources>