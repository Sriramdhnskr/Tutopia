<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:bottom="1dp"
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/black" />
                    <!--android:color="#535353" />-->
                </shape>
            </item>
            <item android:gravity="center_vertical|end"
                android:end="14dp"
                android:left="5dp"
                android:drawable="@drawable/ic_arrow_down">
            </item>
        </layer-list>
    </item>
</selector>